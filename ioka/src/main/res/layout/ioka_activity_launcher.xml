<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ioka_color_foreground">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/vProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/IokaMediumPrimaryTextView.18"
            android:textColor="@color/ioka_color_nonadaptable_text"
            tools:text="@string/ioka_common_processing_payment" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>