<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IokaTheme.Transparent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/ioka_color_foreground</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--  EditText  -->
    <style name="IokaPrimaryEditText">
        <item name="android:background">@color/ioka_color_nonadaptable_transparent</item>
        <item name="android:textColorHint">@color/ioka_color_nonadaptable_grey</item>
        <item name="android:textColor">@color/ioka_color_edittext_tint</item>
    </style>

    <style name="PrimaryEditText.16" parent="IokaPrimaryEditText">
        <item name="android:textSize">16sp</item>
    </style>

    <!--  Button  -->
    <style name="IokaPrimaryButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/ioka_color_nonadaptable_text</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">@drawable/ioka_bg_ioka_state_button</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="IokaPrimaryButton.16">
        <item name="android:textSize">16sp</item>
    </style>

    <!--  Switch  -->
    <style name="IokaSwitch" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/ioka_color_primary</item>
        <item name="colorSwitchThumbNormal">@color/ioka_color_nonadaptable_text</item>
        <item name="android:colorForeground">#9494A6</item>
    </style>

    <!--  ImageView  -->
    <style name="IokaSecondaryImageView">
        <item name="tint">@color/ioka_color_nonadaptable_grey</item>
    </style>

    <!--  TextView  -->
    <style name="IokaPrimaryTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/ioka_color_text</item>
    </style>

    <style name="IokaPrimaryTextView.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="IokaPrimaryTextView.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="IokaPrimaryTextView.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="IokaPrimaryTextView.24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="IokaMediumPrimaryTextView" parent="IokaPrimaryTextView">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="IokaMediumPrimaryTextView.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="IokaMediumPrimaryTextView.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="IokaMediumPrimaryTextView.28">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="IokaWhiteTextView" parent="IokaPrimaryTextView">
        <item name="android:textColor">@color/ioka_color_nonadaptable_text</item>
    </style>

    <style name="IokaWhiteTextView.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="IokaWhiteTextView.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="IokaSecondaryTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/ioka_color_nonadaptable_grey</item>
    </style>

    <style name="IokaSecondaryTextView.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="IokaSecondaryTextView.14">
        <item name="android:textSize">14sp</item>
    </style>

</resources>